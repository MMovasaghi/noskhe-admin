<Window x:Class="noskhe_Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:noskhe_Admin"
        mc:Ignorable="d"
        Title="Noskhe-Administrator" Height="650" Width="1000" Background="Wheat" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid x:Name="MainGrid">
            
        </Grid>
        <Grid x:Name="LoginGrid">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="20">
                    <TextBlock Text="Username : " FontSize="20" Margin="0 0 20 3"/>
                    <TextBox Width="400" TextAlignment="Center" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <TextBlock Text="Password : " FontSize="20" Margin="0 0 26 3"/>
                    <TextBox Width="400" FontSize="18"/>
                </StackPanel>
                <Button Content="Sign in" FontSize="16" Width="200" Height="50" HorizontalAlignment="Right" Margin="30"/>
            </StackPanel>
            
        </Grid>
    </Grid>
    
</Window>
